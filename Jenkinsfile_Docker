pipeline {
    agent any
    stages {
        stage('CHECKOUT') {
            steps {
                checkout([$class: 'GitSCM',
                        branches: [[name: 'main']],
                        userRemoteConfigs: [[url: 'https://github.com/harshaprakash100/java_app.git',
                        credentialsId: 'github_hp']]])
            }
        }

        stage('BUILD') {
            steps {
                script {
                    sh 'docker run -i --rm -w /app -v calculator_app:/app maven mvn clean test'
                }
            }
        }
    }
}