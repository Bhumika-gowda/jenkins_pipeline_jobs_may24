pipeline {
    agent any

    stages {
        stage('checkout') {
            steps {
                git branch: 'main',
                    credentialsId: 'github_hp',
                    url: 'https://github.com/harshaprakash100/ip_app.git'
            }
        }

        stage('BUILD_main') {
            steps {
                echo "BUILDING the app from main branch"
                sh 'echo ----- $BRANCH_NAME $GIT_BRANCH'
            }
        }

        stage('BUILD_main') {
            when {
                branch 'main'
            }
            steps {
                echo "BUILDING the app from main branch"
                sh 'ls -lrt'
            }
        }

        stage('BUILD_dev') {
            when {
                branch 'dev'
            }
            steps {
                echo "BUILDING the app from dev branch"
                sh 'ls -lrt'
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
