pipeline {
    agent any

    stages {
        stage('checkout') {
            steps {
                checkout([$class: 'GitSCM',
                        branches: [[name: 'dev']],
                        userRemoteConfigs: [[url: 'https://github.com/harshaprakash100/ip_app.git',
                        credentialsId: 'github_hp']]])
            }
        }

        stage('Check Branch') {
            steps {
                echo "BUILDING the app from main branch"
                sh 'echo $GIT_BRANCH $BRANCH_NAME'
            }
        }

        stage('BUILD_main') {
            when {
                environment name: 'GIT_BRANCH', value: 'origin/main'
            }
            steps {
                echo "BUILDING the app from main branch"
                sh 'ls -lrt'
            }
        }

        stage('BUILD_dev') {
            when {
                environment name: 'GIT_BRANCH', value: 'origin/dev'
            }
            steps {
                echo "BUILDING the app from dev branch"
                sh 'ls -lrt'
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
