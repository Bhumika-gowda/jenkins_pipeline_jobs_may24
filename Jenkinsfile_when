pipeline {
    agent any

    stages {
        stage('checkout') {
            steps {
                checkout([$class: 'GitSCM',
                        branches: [[name: 'main']],
                        userRemoteConfigs: [[url: 'https://github.com/harshaprakash100/ip_app.git',
                        credentialsId: 'github_hp']]])
            }
        }

        stage('BUILD_main') {
            when {
                environment name: 'BRANCH_NAME', value: 'main'
            }
            steps {
                echo "BUILDING the app from main branch"
                sh 'ls -lrt'
            }
        }

        stage('BUILD_dev') {
            when {
                not {
                    environment name: 'BRANCH_NAME', value: 'dev'
                }
            }
            steps {
                echo "BUILDING the app from dev branch"
                sh 'ls -lrt'
            }
        }
    }
}